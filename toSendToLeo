FROM php:8.1-apache

# Install necessary PHP extensions and tools
RUN docker-php-ext-install mysqli && \
    apt-get update && apt-get install -y libzip-dev && \
    docker-php-ext-install zip

# Set ServerName to suppress warnings
RUN echo "ServerName localhost" >> /etc/apache2/apache2.conf

# Enable necessary Apache modules and permissions
RUN a2enmod rewrite
RUN chmod -R 755 /var/www/html

# Copy application source to container
COPY ./src/ /var/www/html/

# Update Apache configuration for directory permissions
RUN echo '<Directory "/var/www/html">\n\
    AllowOverride All\n\
    Require all granted\n\
</Directory>' > /etc/apache2/conf-available/permissions.conf && \
    a2enconf permissions

# Set appropriate permissions
RUN chown -R www-data:www-data /var/www/html && \
    chmod -R 755 /var/www/html

# Expose the service port
EXPOSE 80

# Start Apache server
CMD ["apache2-foreground"]
